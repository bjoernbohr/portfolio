<section id="about" class="about-wrapper grid-container grid-container__sides animated-p" data-appear-top-offset='-500'>
    <h2 class="about-headline headline headline__b fade-w delay-250">
        <span class="block-m">
            {{ config.site.subline_one }}
            <span class="headline__underline headline__underline-p fade-under-r">
                {{ config.site.subline_two }}
            </span>
        </span>
    </h2>
    <p class="about-text text text__b fade-w">
        <span class="block-s">
                    {{ config.site.text }}
        </span>
    </p>
    <div class="about-btn rellax fade fade-w" data-rellax-speed="1.25">
        <a href="" class="btn btn__p text text__w text__upper text__bold">
            <span class="btn-text">Sag Hallo</span>
        </a>
    </div>
    <figure class="about-img rellax" data-rellax-speed="1">
        {% set image = config.site.aboutImg %}
        {{ page.find('/images').media[image].quality(80).html('ich bins', 'mein bild', 'fade-r') }}
        <span class="about-img__bg rellax fade fade-w" data-rellax-speed="1.5"></span>
    </figure>
</section>