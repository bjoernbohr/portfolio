<section id="about" class="about-wrapper grid-container grid-container__sides animatedParent" data-appear-top-offset='-500'>
    <h2 class="about-headline headline headline__b animated fadeInLeft">
        {{ config.site.subline_one }}
        <span class="headline__underline headline__underline-p">
            {{ config.site.subline_two }}
        </span>
    </h2>
    <p class="about-text text text__b animated fadeInLeft delay-250">
        {{ config.site.text }}
    </p>
    <a href="" class="about-btn btn btn__p text text__w text__upper text__bold rellax animated fadeInLeft delay-250" data-rellax-speed="1.25">
        <span class="btn-text">Sag Hallo</span>
    </a>
    <figure class="about-img rellax animated fadeInRight" data-rellax-speed="1">
        {% set image = config.site.aboutImg %}
        {{page.find('/images').media[image].quality(80).html('ich bins', 'mein bild')}}
        <span class="about-img__bg rellax animated" data-rellax-speed="1.5"></span>
    </figure>
</section>