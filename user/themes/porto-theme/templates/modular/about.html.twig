<section class="about-wrapper grid-container grid-container__sides">
    <h2 class="about-headline headline headline__b">
        {{ config.site.subline_one }}
        <span class="headline__underline headline__underline-p">
            {{ config.site.subline_two }}
        </span>
    </h2>
    <p class="about-text text text__b">
        {{ config.site.text }}
    </p>
    <a href="" class="about-btn btn btn__p text text__w text__upper text__bold width__100">Sag Hallo</a>
    <figure class="about-img">
        {% set image = config.site.aboutImg %}
        {{page.find('/images').media[image].quality(80).html('ich bins', 'mein bild')}}
    </figure>
</section>