<section class="teaser-wrapper grid-container grid-container__sides animated-p {% if loop.first %}teaser-wrapper__first{% endif %} {% if loop.index is even %}animated-p__odd{% endif %}" data-tilt>
    <figure class="teaser-img" style="transition-delay: 2s">
        <a href="" class="teaser-link height__100 animated" style="transition-delay: 2s">
            {{ block ("img", "item.html.twig") }}
        </a>
    </figure>
    <div class="teaser-headline">
        <h2 class="headline align-right block-xl fade-r" style="transition-delay: 2s">
            {{ block("title", "item.html.twig") }}
        </h2>
    </div>
    <h3 class="teaser-subline block-xl">
       <span class="subline headline__underline headline__underline-small headline__underline-p fade-r" style="transition-delay: 2s">
          {{ block("subline", "item.html.twig") }}
       </span>
    </h3>
    <div class="teaser-text">
        <p class="text fade-r">
            {{ block("text", "item.html.twig") }}
        </p>
    </div>
    <div class="teaser-btn">
        <a href="" class="btn btn__ghost-p text text__upper text__bold width__100 fade-r" >
            <span class="btn-text">mehr infos</span>
        </a>
    </div>
</section>


